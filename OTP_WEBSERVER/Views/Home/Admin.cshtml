@{
    ViewData["Title"] = "Admin";
}
@model AdminDto

<h2>Welcome @ViewData["Username"]</h2>

<div class="row">
    <div class="col-md-6">
        <h3>My Applications</h3>
        <ul>
            @foreach (var a in Model.Applications)
            {
                @Html.ActionLink(a.Name, "ApplicationDetails", "Home", new { @id = a.Id.ToString() })
            }
        </ul>        
        <button class="btn btn-primary" onclick="location.href='@Url.Action("ApplicationDetails", "Home", new { @id =0 })';return false;">Add New Application</button>    
    </div>
</div>